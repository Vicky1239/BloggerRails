<h1>Articles Tagged with "<%= @tag.name %>"</h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
  <li><%= link_to "destroy tag ", tag_path(@tag), method: :delete,data: {confirm: "Really delete the tag"},class: 'new_article' %></li>
</ul>

<h1><%= @article.title %></h1>
<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p><br>
<p><% if @article.image.exists? %>
      <%= image_tag @article.image.url %><br/>
  <% end %></p>
<p><%= @article.body %></p><br/>
<%= link_to "Back to articles list",articles_path %><br/><br/>
<%= link_to "delete post", article_path(@article), method: :delete,data: {confirm: "Really delete the article?"} %><br/><br/>
<%= link_to "edit post", edit_article_path(@article) %><br/>
<%= render partial: 'comments/form' %><br/>
<h3>Comments (<%= @article.comments.size %>)</h3>
<%= render partial: 'articles/comment', collection: @article.comments %>